@model UserDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}


@if (TempData["message"] != null)
{
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
        @TempData["message"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<form asp-action="Index" method="post" class="w-75 mx-auto p-3" enctype="multipart/form-data">
    <input type="hidden" asp-for="@Model.Id" />
    <div class="form-group">
        <label asp-for="@Model.Name"></label>
        <input asp-for="@Model.Name" class="form-control" />
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.SurName"></label>
        <input asp-for="@Model.SurName" class="form-control" value="@Model.SurName" />
        <span asp-validation-for="@Model.SurName" class="text-danger"></span>

    </div>
    <div class="form-group">
        <label asp-for="@Model.Email"></label>
        <input asp-for="@Model.Email" class="form-control" value="@Model.Email" />
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-md-2">

            </div>
            <div class="col-md-4">
                <div>
                    <h5 class="text-center">Şuan ki resminiz:</h5>
                    <img src="~/img/@Model.Picture" class="w-100" style="height:10rem!important;" alt="@Model.Name" />
                </div>

            </div>

            <div class="col-md-4">
                <div id="alanOnizleme" style="display:none!important;">
                    <h5 class="text-center">Seçtiğiniz resim:</h5>
                    <img id="resimOnizleme" src="" class="w-100" style="height:10rem!important;" />
                </div>

            </div>
            <div class="col-md-2">

            </div>

            <div class="col-md-12">
                <label> Resim Seç:</label>
                <input type="file" class="form-control-file" name="resim" id="Resim" />
            </div>
        </div>
    </div>

    <button type="submit" class=" btn btn-success mt-2"><i class="fas fa-check mr-2"></i>Güncelle</button>
    <button type="submit" class="btn btn-info mt-2" asp-controller="" asp-action="Index"><i class="fas fa-times"></i> Vazgeç</button>

</form>

@section Scripts{

    <script type="text/javascript">
        $(document).ready(function () {
            $("#Resim").change(function (e) {

                $("#alanOnizleme").show();
                $("#resimOnizleme").attr('src', URL.createObjectURL(e.target.files[0]));
            });
        });
    </script>
}


