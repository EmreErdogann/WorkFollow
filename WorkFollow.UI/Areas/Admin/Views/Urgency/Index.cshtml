@model List<UrgencyDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
@if (Model.Count != 0)
{
    <a asp-action="Create" class="btn btn-outline-dark my-2"><i class="fas fa-plus-circle"></i> Yeni Aciliyet Ekle</a>

    <table class="table table-bordered table-hover table-sm mt-2">
        <thead>
            <tr>
                <th>Tanım</th>
                <th>Eklenme Tarihi</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.Definition</td>
                <td>@item.CreatedDate.ToString("D")</td>
                <td>
                    <a asp-action="Get" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="far fa-edit mr-2"></i>Düzenle </a>
                    <a href="" data-toggle="modal" data-target="#silmeEkrani" data-emre="@item.Id" class="btn btn-danger btn-sm">

                        <i class="fas fa-times-circle mr-2"></i> Sil
                    </a>
                </td>
               
            </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center mt-4">

        <p class="lead">
            <b>Sistemde kayıtlı aciliyet durumu bulunamadı.</b>
        </p>

        <a asp-action="Create" class="btn btn-sm btn-info my-2"><i class="fas fa-check mr-2"></i>Yeni Aciliyet Ekle</a>

    </div>
}

<div class="modal fade" id="silmeEkrani" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">UYARI</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Silmek istediğinizden emin misiniz?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hayır Vazgeç</button>
                <button id="btnSil" type="button" class="btn btn-primary btn-remove">Evet Sil</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">

        $(document).ready(function () {
            $("#silmeEkrani").on("show.bs.modal", function (event) {
                let tetikleyenElement = $(event.relatedTarget);
                let id = tetikleyenElement.data("emre");
                var url = "/Admin/Urgency/Delete?urgencyId=" + id;
                $(".btn-remove").on('click',function () {

                        $.ajax({
                            type: "GET",
                            url: url,

                            success: function () {

                                window.location.reload();
                            },
                            error: function (error) {

                                alert(error.statuxText);
                            }
                        })
                    });
            })

        });

    </script>

}