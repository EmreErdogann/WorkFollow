@*@model List<TaskDto>*@
@model PaginatedList<TaskDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count != 0)
{
    <a asp-action="Create" class="btn btn-outline-dark my-2"><i class="fas fa-plus-circle"></i> Bir Görev Oluştur</a>

    <table class="table table-bordered table-hover table-sm mt-2">
        <thead>
            <tr>
                <th>Tanım</th>
                <th>Açıklama</th>
                <th>Aciliyet Durumu</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Explanation</td>
                    <td>@item.Urgency.Definition</td>
                    <td>
                        <a asp-action="Get" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="far fa-edit mr-2"></i>Düzenle </a>
                        
                        <a href="" data-toggle="modal" data-target="#silmeEkrani" data-emre="@item.Id" class="btn btn-danger btn-sm">
                           
                            <i class="fas fa-times-circle mr-2"></i> Sil
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="text-center mt-4">

        <p class="lead">
            <b>Sistemde kayıtlı görev durumu bulunamadı.</b>
        </p>

        <a asp-action="Create" class="btn btn-sm btn-info my-2"><i class="fas fa-check mr-2"></i>Bir Görev Oluştur</a>

    </div>
}

<!-- Modal -->
<div class="modal fade" id="silmeEkrani" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">UYARI</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Silmek istediğinizden emin misiniz?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hayır Vazgeç</button>
                <button id="btnSil" type="button" class="btn btn-primary btn-remove">Evet Sil</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">

        $(document).ready(function () {
            $("#silmeEkrani").on("show.bs.modal", function (event) {
                let tetikleyenElement = $(event.relatedTarget);
                let id = tetikleyenElement.data("emre");
                var url = "/Admin/Task/Delete?taskId=" + id;
                $(".btn-remove").on('click', function () {

                    $.ajax({
                        type: "GET",
                        url: url,

                        success: function () {

                            window.location.reload();
                        },
                        error: function (error) {

                            alert(error.statuxText);
                        }
                    })
                });
            })

        });

    </script>

}

@{
    var prevDisable = !Model.PreviousPage ? "disabled" : "";
    var nextDisable = !Model.NextPage ? "disabled" : "";

}

<a asp-action="Index"
   asp-route-pageNumber="@(Model.PageIndex-1 )"
   class="btn btn-success @prevDisable">
    Önceki Sayfa
</a>

<a asp-action="Index"
   asp-route-pageNumber="@(Model.PageIndex+1 )"
   class="btn btn-info @nextDisable">
    Sonraki Sayfa
</a>
